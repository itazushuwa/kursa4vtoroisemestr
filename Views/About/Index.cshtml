@model List<rep.Models.Teacher>

<h2 class="mt-3">Properties Available for Rent</h2>

<div class="row mt-3">
    @foreach (var teacher in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@teacher.Name</h5>
                    <p class="card-text">@teacher.Description</p>
                    <a href="#" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
    <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index", "Home")'">Home</button>
</div>