@model List<rep.Models.DbModels.User>

<main>
    @foreach (var user in Model)
    {
        <div class="teacher-card">
            <p>@user.UserID</p>
            <p>Логин: @user.UserName</p>
            <p>Еmail: @user.UserEmail</p>
            <p>Роль: @user.UserRole</p>
            <p>Дата Рег.:@user.UserRegDate</p>
        </div>
    }
    @using (Html.BeginForm("Users", "Main", FormMethod.Post))
    {
        <h1>Добавить пользователя</h1>
        <div>
            <label for="login">Логин:</label>
            @Html.TextBox("login", null, new { @style = "height: 10px", @class = "form-control", required = "required" })
        </div>

        <div>
            <label for="password">Пароль:</label>
            @Html.Password("password", null, new { @style = "height: 10px", @class = "form-control", required = "required" })
        </div>

        <div>
            <label for="role">Роль:</label>
            @Html.DropDownList("role", new SelectList(new[] {
        new SelectListItem { Text = "Пользователь", Value = "user" },
        new SelectListItem { Text = "Администратор", Value = "admin" },
        new SelectListItem { Text = "Учитель", Value = "teacher" },
        }, "Value", "Text"), "Выберите роль", new { @class = "form-control", required = "required" })
        </div>

        <button class="btn btn-primary" type="submit">Добавить</button>
    }
    @using (Html.BeginForm("DeleteUser", "Main", FormMethod.Post))
    {
        <h1>Удалить пользователя</h1>
        <div>
            <label for="userId">Id пользователя:</label>
            @Html.TextBox("userId", null, new { @style = "height: 30px", @class = "form-control", required = "required" })
        </div>

        <button class="btn btn-primary" type="submit">Удалить</button>
    }
    @using (Html.BeginForm("EditUser", "Main", FormMethod.Post))
    {
        <h1>Редактировать пользователя</h1>
        <div>
            <label for="editlogin">ID:</label>
            @Html.TextBox("UserID", null, new { @style = "height: 30px", @class = "form-control", required = "required" })
        </div>
        <div>
            <label for="editlogin">Логин:</label>
            @Html.TextBox("UserName", null, new { @style = "height: 30px", @class = "form-control", required = "required" })
        </div>
        <div>
            <label for="editpassword">Пароль:</label>
            @Html.Password("UserPassword", null, new { @style = "height: 30px", @class = "form-control", required = "required" })
        </div>
        <div>
            <label for="role">Роль:</label>
            @Html.DropDownList("UserRole", new SelectList(new[] {
        new SelectListItem { Text = "Пользователь", Value = "user" },
        new SelectListItem { Text = "Администратор", Value = "admin" },
        new SelectListItem { Text = "Преподаватель", Value = "teacher" },
        }, "Value", "Text"), "Выберите роль", new { @class = "form-control", required = "required" })
        </div>

        <button class="btn btn-primary" type="submit">Добавить</button>
    }
</main>